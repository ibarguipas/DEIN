<Window x:Class="proyectoIvan.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyectoIvan"
        mc:Ignorable="d"
        Title="TravelPet" Icon="/Images/logo.png" MinHeight="690" MinWidth="910" Height="600" Width="910">
    <Grid Background="#fefff9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.ColumnSpan="18" Background="#2b2b2b" Height="50"></StackPanel>

        <Button Style="{StaticResource menuSpecial}" Grid.Column="0">
            <Image Source="/Images/logo.png" />

        </Button>
        <Button Style="{StaticResource menuSelected}" Content="Home" Grid.Column="2" Grid.ColumnSpan="2"></Button>
        <Button Style="{StaticResource menu}" Content="Mapa" Grid.Column="6" Grid.ColumnSpan="2" Click="Button_Click_1"></Button>
        <Button Style="{StaticResource menu}" Content="Calendario" Grid.Column="10" Grid.ColumnSpan="2" Click="Button_Click_3"></Button>
        <Button Style="{StaticResource menu}" Content="Historial" Grid.Column="14" Grid.ColumnSpan="2" Click="Button_Click_4"></Button>
        <Button Style="{StaticResource menuSpecial}" Grid.Column="18">
            <Image Source="/Images/user.png" />
        </Button>

        <StackPanel  Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="16" Grid.RowSpan="2"  Margin="25,0,25,0" Background="#d9d9d9"></StackPanel>
        <Button Style="{StaticResource selectorDefault1}"  Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="8" Margin="25,0,0,0" Content="Busca tu viaje" Click="Button_Click"></Button>
        <Button Style="{StaticResource selectorSelect1}" Grid.Column="9" Grid.Row="2" Grid.ColumnSpan="8"  Margin="0,0,25,0" Content="Cerca de ti"></Button>
        <TextBox Grid.Column="2" Grid.Row="3" Background="White" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="25,32.4,5.4,36" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  GotFocus="Txt_GotFocus" LostFocus="Txt_LostFocus" Name="direccion" Text="¿A donde vas?"/>
        <ComboBox Grid.Column="7" Grid.Row="3" Background="#2b2b2b" Grid.ColumnSpan="4" Grid.RowSpan="2" Margin="40.2,33.4,41,35" HorizontalAlignment="Stretch" SelectedIndex="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" x:Name="MainComboBox" SelectionChanged="ChildComboBox_SelectionChanged">
            <ComboBoxItem Content="¿Que Buscas?" IsEnabled="False" Visibility="Collapsed"/>
            <ComboBoxItem Content="Restaurantes"></ComboBoxItem>
            <ComboBoxItem Content="Hoteles"></ComboBoxItem>
            <ComboBoxItem Content="Casas Rurales"></ComboBoxItem>
            <ComboBoxItem Content="Veterinarios"></ComboBoxItem>
            <ComboBoxItem Content="Farmacias"></ComboBoxItem>
            <ComboBoxItem Content="Monumentos"></ComboBoxItem>


        </ComboBox>


        <Button Style="{StaticResource search}" Grid.Column="13" Grid.Row="3" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="5,32.4,25.2,36" Height="26" HorizontalAlignment="Stretch"  Content="Buscar"></Button>

        <Grid Grid.Column="1" Grid.Row="6" Grid.RowSpan="4" Grid.ColumnSpan="4" Background="#f1f1f1" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="115*"></RowDefinition>
                <RowDefinition Height="24*"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="/Images/plaza-castillo.jpg" Stretch="Fill" />

            <StackPanel Grid.Row="1" Background="#2a9134" Orientation="Horizontal">
                <Label Content="Plaza del Castillo" Width="128"></Label>
                <Label Content="4.6" HorizontalAlignment="Right"></Label>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="7" Grid.Row="6" Grid.RowSpan="4" Grid.ColumnSpan="4" Background="#f1f1f1" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="115*"></RowDefinition>
                <RowDefinition Height="24*"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="/Images/fuente-que-ver-en-pamplona.jpg" Stretch="Fill" />

            <StackPanel Grid.Row="1" Background="#2a9134" Orientation="Horizontal">
                <Label Content="Fuente de Navarrería " Width="128"></Label>
                <Label Content="4.9" HorizontalAlignment="Right"></Label>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="13" Grid.Row="6" Grid.RowSpan="4" Grid.ColumnSpan="4" Background="#f1f1f1" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="115*"></RowDefinition>
                <RowDefinition Height="24*"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="/Images/catedral-pamplona.jpg" Stretch="Fill" />

            <StackPanel Grid.Row="1" Background="#2a9134" Orientation="Horizontal">
                <Label Content="Catedral Santa María" Width="128"></Label>
                <Label Content="4.1" HorizontalAlignment="Right"></Label>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="10" Grid.RowSpan="4" Grid.ColumnSpan="4" Background="#f1f1f1" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="115*"></RowDefinition>
                <RowDefinition Height="24*"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="/Images/paseo-redin-que-hacer-en-pamplona.jpg" Stretch="Fill" />

            <StackPanel Grid.Row="1" Background="#2a9134" Orientation="Horizontal">
                <Label Content="Paseo del Redín" Width="128"></Label>
                <Label Content="3.9" HorizontalAlignment="Right"></Label>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="7" Grid.Row="10" Grid.RowSpan="4" Grid.ColumnSpan="4" Background="#f1f1f1" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="115*"></RowDefinition>
                <RowDefinition Height="24*"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="/Images/muralla-pamplona.jpg" Stretch="Fill" />

            <StackPanel Grid.Row="1" Background="#2a9134" Orientation="Horizontal">
                <Label Content="Murallas de Pamplona" Width="128"></Label>
                <Label Content="5.0" HorizontalAlignment="Right"></Label>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="13" Grid.Row="10" Grid.RowSpan="4" Grid.ColumnSpan="4" Background="#f1f1f1" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="115*"></RowDefinition>
                <RowDefinition Height="24*"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="/Images/archivo-real-general-navarra.jpg" Stretch="Fill" />

            <StackPanel Grid.Row="1" Background="#2a9134" Orientation="Horizontal">
                <Label Content="Archivo Real y General de Navarra" Width="128"></Label>
                <Label Content="4.4" HorizontalAlignment="Right"></Label>
            </StackPanel>
        </Grid>


    </Grid>
</Window>
