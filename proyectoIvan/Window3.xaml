        </Grid.RowDefinitions>

        <StackPanel Grid.ColumnSpan="18" Background="#2b2b2b" Height="50"></StackPanel>

        <Button Style="{StaticResource menuSpecial}" Grid.Column="0">
            <Image Source="/Images/logo.png" />

        </Button>
        <Button Style="{StaticResource menu}" Content="Home" Grid.Column="2" Grid.ColumnSpan="2" Click="Button_Click"></Button>
        <Button Style="{StaticResource menu}" Content="Mapa" Grid.Column="6" Grid.ColumnSpan="2" Click="Button_Click_1"></Button>
        <Button Style="{StaticResource menuSelected}" Content="Calendario" Grid.Column="10" Grid.ColumnSpan="2" ></Button>
        <Button Style="{StaticResource menu}" Content="Historial" Grid.Column="14" Grid.ColumnSpan="2" Margin="4.8,0,5,11.2" VerticalAlignment="Bottom" Click="Button_Click_2"></Button>
        <Button Style="{StaticResource menuSpecial}" Grid.Column="18">
            <Image Source="/Images/user.png" />
        </Button>
        <Viewbox Stretch="Fill" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="16" Grid.RowSpan="10" >
            <Calendar Background="#cef0d1" ></Calendar>
        </Viewbox>
        
        
    </Grid>
